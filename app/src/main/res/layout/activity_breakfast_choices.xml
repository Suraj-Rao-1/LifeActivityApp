<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreakfastChoicesActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="490dp"
        android:layout_height="852dp"
        app:srcCompat="@drawable/blueGradient"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-7dp" />

    <TextView
        android:id="@+id/breakfastChoiceTitle"
        android:layout_width="410dp"
        android:layout_height="143dp"
        android:fontFamily="@font/geostar"
        android:gravity="center"
        android:text="BREAKFAST"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/breakfastChoiceSubText"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_horizontal"
        android:text="WHAT TYPE OF FOOD WOULD YOU LIKE TO EAT"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/breakfastFiltersButton"
        android:layout_width="253dp"
        android:layout_height="87dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="FILTERS"
        android:textColor="@color/white"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="342dp" />

    <Button
        android:id="@+id/breakfastRandomButton"
        android:layout_width="256dp"
        android:layout_height="84dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="RANDOM"
        android:textColor="@color/white"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="513dp" />

</androidx.constraintlayout.widget.ConstraintLayout>