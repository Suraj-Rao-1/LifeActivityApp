<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EatChoicesActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="490dp"
        android:layout_height="852dp"
        app:srcCompat="@drawable/blue_gradient"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-7dp" />

    <Button
        android:id="@+id/breakfastButton"
        android:layout_width="253dp"
        android:layout_height="87dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="BREAKFAST"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:onClick="onBreakfastClick"
        app:layout_constraintBottom_toTopOf="@+id/lunchButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lunchButton"
        android:layout_width="256dp"
        android:layout_height="84dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="LUNCH"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:onClick="onLunchClick"
        app:layout_constraintBottom_toTopOf="@+id/dinnerButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dinnerButton"
        android:layout_width="273dp"
        android:layout_height="80dp"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="95dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="DINNER"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:onClick="onDinnerClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/eatChoiceTitle"
        android:layout_width="410dp"
        android:layout_height="143dp"
        android:fontFamily="@font/geostar"
        android:gravity="center"
        android:text="EAT"
        android:textColor="@color/white"
        android:textSize="@dimen/titleFontSize"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="408dp"
        android:layout_height="120dp"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_horizontal"
        android:text="WHAT TYPE OF FOOD WOULD YOU LIKE TO EAT"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>