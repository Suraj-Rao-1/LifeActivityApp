<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DinnerChoicesActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="490dp"
        android:layout_height="852dp"
        app:srcCompat="@drawable/blue_gradient"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-7dp" />

    <TextView
        android:id="@+id/dinnerChoiceTitle"
        android:layout_width="410dp"
        android:layout_height="143dp"
        android:fontFamily="@font/geostar"
        android:gravity="center"
        android:text="DINNER"
        android:textColor="@color/white"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dinnerFiltersButton"
        android:layout_width="253dp"
        android:layout_height="87dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="FILTERS"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/dinnerRandomButton"
        app:layout_constraintStart_toStartOf="@+id/background" />

    <Button
        android:id="@+id/dinnerRandomButton"
        android:layout_width="256dp"
        android:layout_height="84dp"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="236dp"
        android:background="@drawable/transparent_bg_bordered_button"
        android:fontFamily="@font/roboto_medium"
        android:text="RANDOM"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>